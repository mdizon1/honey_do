<div class="modal fade new-todo-modal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" type="button" data-dismiss="modal">
          <span aria-hidden="true">
            <i class="fa fa-close"></i>
          </span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title">Create a new <%= title %></h4>
      </div>

      <form role="form">
        <div class="modal-body">
          <div class="form-group">
            <input type="text" class="form-control" name="new_todo_title" placeholder="Title">
            <textarea class="form-control" name="new_todo_notes" placeholder="Description (optional)"></textarea>
            <input type="hidden" name="new_todo_klass" value="<%=klass%>">
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" type="submit">
            <i class="fa fa-plus"></i>
            Create <%= title %> 
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
