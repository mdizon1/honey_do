= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:id => 'create_user'}) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, :for => 'new_user_email'
    = f.email_field :email, :autofocus => true, :class => 'form-control', :id => 'new_user_email'

  .form-group
    = f.label :password, :for => 'new_user_password'
    = f.password_field :password, :class => 'form-control', :id => 'new_user_password'

  .form-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, :class => 'form-control'

  %div
    = f.submit "Sign up", :class => 'btn btn-primary'
